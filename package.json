    "@types/object-hash": "2.2.1",
    "apollo-server": "3.8.2",
    "axios": "0.27.2",
    "codecov": "3.8.3",
    "graphql": "15.8.0",
    "graphql-middleware": "6.1.29",
    "graphql-shield-rules": "0.0.1",
    "graphql-tools": "8.2.12",
    "husky": "6.0.0",
    "jest": "28.1.1",
    "lint-staged": "13.0.1",
    "prettier": "2.7.0",
